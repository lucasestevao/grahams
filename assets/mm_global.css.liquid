/* #Tablet (Portrait) */
@media only screen and (min-width: 768px) and (max-width: 959px) {
	#maincontent .content-block .mm_gender-legend {
		width: 30%;
	}

	#mm_size-guide {
		width: 67%;
	}
}

/*  #Mobile (Portrait) */
@media only screen and (max-width: 767px) {
	.mm_no-mobile {
		display: none !important;
	}

	.row .small-4 {
		width: 33%;
	}

	.row .small-6 {
		width: 49%%; 
	}

	.row .small-7 {
		width: 58%;
	}

	.row .small-12 {
		width: 100%;
	}

	#mm_mainlinkboxes .mm_mainbox_middle {
		margin-left: 0px;
	}
	
	#crumbs {
		margin: 10px 0px;
	}

	#maincontent .content-block .mm_gender-legend {
		width: 100%;
	}

	#maincontent #mm_search,
	#maincontent #mm_not-found {
		margin: 0px;
	}
}

/* #Mobile (Landscape) */
@media only screen and (min-width: 480px) and (max-width: 767px) {
	div h2.mm_fixed-height {
		height: 68px;
	}

	.row .medium-4 {
		width: 33%;
	}

	.row .medium-6 {
		width: 49%%; 
	}

	.row .medium-7 {
		width: 58%;
	}

	.row .medium-12 {
		width: 100%;
	}

	#crumbs {
		margin: 10px 0px;
	}

	#maincontent .content-block .mm_gender-legend {
		width: 100%;
	}

	#maincontent #mm_search,
	#maincontent #mm_not-found {
		margin: 0px;
	}
}


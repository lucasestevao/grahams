/* -------- Body ------- */

.mm_home-h2 {
	border-bottom: #68c35d 1px solid;
	font-family: 'HelveticaNeueLightCond';
	font-size: 26px;
	margin-bottom: 20px;
	padding-bottom: 10px;
}

.mm_boxcontent-img {
	max-width: 300px;
	max-height: 350px;
}

.mm_justify {
	text-align: justify;
}

/* -------- Footer ------- */

#pagefooter {
	font:inherit;
	padding: 0px;
	border-width: 2px;
}

#pagefooter .registercont {
	margin-top: 40px;
	margin-bottom: 50px;
}

#pagefooter #mailinglist_email,
#pagefooter #mm_submit,
.content-block .mm_submit {
	font-size: 14px;
	height: 32px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 5px;
}

#pagefooter #mailinglist_email,
#pagefooter #mm_submit {
	margin: 10px 0 0 10px;
}

#pagefooter #mailinglist_email {
	padding: 0px 10px;
	border: 1px #b8b8b8 solid;
}

#pagefooter #mm_submit,
.content-block .mm_submit {
	background: #68c35d;
	color: #ffffff;
	font-weight: bold;
	width: 105px;
	padding: 0px;
	border-color: #68c35d;
	border-bottom: 3px #529a49 solid;
}

#pagefooter #mm_submit:hover,
.content-block .mm_submit:hover {
	opacity: 90%;
	/* IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=90)";
	/* IE 5-7 */
	filter: alpha(opacity=90);
	/* Netscape */
	-moz-opacity: 0.9;
	/* Safari 1.x */
	-khtml-opacity: 0.9;
	/* Good browsers */
	opacity: 0.9;
}

.mm_h3-footer {
	font-size: 20px;
	padding: 0px;
	text-align: left;
}

a#scrolltotop #mm_img-scroll {
	background: url(mm_social-sprites-smush.png) no-repeat 0 -27px;
	margin: 0 auto;
	display: block;
	width: 22px;
	height: 24px;
}

a#scrolltotop #mm_img-scroll:hover {
	background-position: 0 0;
}

#pagefooter #mm_home_monkeymob {
	color: #dedada;
	font-size: 11px;
}

#pagefooter #mm_home_monkeymob:hover {
	border: 0px;
}


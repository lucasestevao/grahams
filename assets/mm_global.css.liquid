/* -------- Table ------- */

#maincontent table {
	background: white;
	margin-bottom: 1.25rem;
	border: solid 1px #dddddd;
}

#maincontent table thead,
#maincontent table tfoot {
	background: whitesmoke;
}

#maincontent table thead tr th,
#maincontent table thead tr td,
#maincontent table tfoot tr th,
#maincontent table tfoot tr td {
	padding: 0.5rem 0.625rem 0.625rem;
	font-size: 0.875rem;
	font-weight: bold;
	color: #222222;
	text-align: left;
}

#maincontent table tr th,
#maincontent table tr td {
	padding: 0.5625rem 0.625rem;
	font-size: 0.875rem;
	color: #222222;
}

#maincontent table tr.even,
table tr.alt,
table tr:nth-of-type(even) {
	background: #f9f9f9;
}

/* IE8 Fix - equivalent to li:nth-child(1) */
#maincontent table tr:first-child th {
	background/*\**/: #f9f9f9\9;
}

#maincontent table thead tr th,
#maincontent table tfoot tr th,
#maincontent table tbody tr td,
#maincontent table tr td,
#maincontent table tfoot tr td {
	display: table-cell;
	line-height: 1.125rem;
}


